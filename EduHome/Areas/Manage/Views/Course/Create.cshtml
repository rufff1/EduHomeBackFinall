@model Course

@{
    ViewData["Title"] = "Create";

    IEnumerable<CourseCategory> categories = ViewBag.Categories;
    SelectList selectListCategory = new SelectList(categories, nameof(CourseCategory.Id), nameof(CourseCategory.Name));
    IEnumerable<Tag> tags = ViewBag.Tags;
    SelectList selectListTag = new SelectList(tags, nameof(Tag.Id), nameof(Tag.Name));


}



<h4>Create Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="About" class="control-label"></label>
                <input asp-for="About" class="form-control" />
                <span asp-validation-for="About" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HowToApply" class="control-label"></label>
                <input asp-for="HowToApply" class="form-control" />
                <span asp-validation-for="HowToApply" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CERTIFICATION" class="control-label"></label>
                <input asp-for="CERTIFICATION" class="form-control" />
                <span asp-validation-for="CERTIFICATION" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaveReply" class="control-label"></label>
                <input asp-for="LeaveReply" class="form-control" />
                <span asp-validation-for="LeaveReply" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assesments" class="control-label"></label>
                <input asp-for="Assesments" class="form-control" />
                <span asp-validation-for="Assesments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassDuration" class="control-label"></label>
                <input asp-for="ClassDuration" class="form-control" />
                <span asp-validation-for="ClassDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Launguage" class="control-label"></label>
                <input asp-for="Launguage" class="form-control" />
                <span asp-validation-for="Launguage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SkillLevel" class="control-label"></label>
                <input asp-for="SkillLevel" class="form-control" />
                <span asp-validation-for="SkillLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Starts" class="control-label"></label>
                <input asp-for="Starts" class="form-control" />
                <span asp-validation-for="Starts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentsCount" class="control-label"></label>
                <input asp-for="StudentsCount" class="form-control checking" />
                <span asp-validation-for="StudentsCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TagIds" class="control-label"></label>
                <select asp-for="TagIds" class="form-control" asp-items="selectListTag"></select>
                <span asp-validation-for="TagIds" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="CourseCategoryId" class="control-label"></label>
                <select asp-for="CourseCategoryId" class="form-control" asp-items="selectListCategory"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Back to List</a>
</div>

<script>
    let checkX = document.querySelector(".checking");

    checkX.addEventListener("input", function (e) {
        if (e.target.value < 0) {
            e.target.value = 0
        }
    })
</script>

@section script{
    @await Html.PartialAsync("_ValidationPartial")
}