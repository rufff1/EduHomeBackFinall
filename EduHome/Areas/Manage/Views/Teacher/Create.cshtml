@model Teacher

@{
    ViewData["Title"] = "Create";

    IEnumerable<Skill> skills = ViewBag.TeacherSkills;
    SelectList selectListSkill = new SelectList(skills, nameof(Skill.Id), nameof(Skill.Name));
    IEnumerable<TeacherPosition> teacherPositions = ViewBag.TeacherPosition;
    SelectList selectListPosition = new SelectList(teacherPositions, nameof(TeacherPosition.Id), nameof(TeacherPosition.Name));

}



<h4>Create Teacher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
