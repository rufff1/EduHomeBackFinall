            <div class="form-group">
                <label asp-for="Fblink" class="control-label"></label>
                <input asp-for="Fblink" class="form-control" />
                <span asp-validation-for="Fblink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PinttLink" class="control-label"></label>
                <input asp-for="PinttLink" class="form-control" />
                <span asp-validation-for="PinttLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VimeoLink" class="control-label"></label>
