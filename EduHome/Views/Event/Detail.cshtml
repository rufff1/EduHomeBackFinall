@model EventVM
@{
    ViewData["Title"] = "Detail";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>event / details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Event Details Start -->
<div class="event-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="event-details">
                    <div class="event-details-img">
                        <img src="~/assets/img/event/@Model.Event.Image" alt="event-details">
                        <div class="event-date">
                            <h3><a asp-controller="event" asp-action="detail" asp-route-id="@Model.Event.Id">@Model.Event.StartTime.ToString("hh")  <span>@Model.Event.StartTime.ToString("MMMM").Substring(0, 3)</span></a></h3>
                        </div>
                    </div>
                  
                    <div class="event-details-content">
                        <h2>@Model.Event.Name</h2>
                        <ul>
                            <li><span>time : </span>@Model.Event.StartTime.ToString("hh")am - @Model.Event.EndTime.ToString("hh")pm</li>
                            <li><span>venue : </span>@Model.Event.Venue</li>
                        </ul>
                        <p>@Model.Event.Description</p>

                        <div class="speakers-area fix">
                            <h4>speakers</h4>
                            @foreach (EventSpeaker eventSpeaker in Model.Event.EventSpeakers)
                            {
                                <div class="single-speaker">
                                    <div class="speaker-img">
                                        <img src="~/assets/img/event/@eventSpeaker.Speaker.Image" alt="speaker">
                                    </div>
                                    <div class="speaker-name">
                                        <h5>@eventSpeaker.Speaker.FullName</h5>
                                        <p>@eventSpeaker.Speaker.Position</p>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form id="contact-form" action="http://demo.devitems.com/eduhome/mail.php" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input type="text" name="name" id="name">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input type="text" name="email" id="email">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input type="text" name="subject" id="subject">
                                    <p>Massage</p>
                                    <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                </div>
                            </div>
                            <a class="reply-btn" href="#" data-text="send"><span>send message</span></a>
                            <p class="form-messege"></p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input class="searchInputt" type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                                <ul class="searchListt" id="searcParr" style="background-color:white;z-index:123;width:auto;height:auto;text-decoration:none;border:1px solid;position:absolute;">
                                </ul>
                            </form>
                        </div>
                    </div>

                    <div class="single-blog-widget mb-50">
                        <h3>categories</h3>
                        <ul>
                            @foreach (CourseCategory courseCategory in Model.CourseCategories)
                            {
                                <li><a asp-controller="event" asp-action="CategoryFindEvent" asp-route-id="@courseCategory.Id">@courseCategory.Name @*(@courseCategory.Events.Count)*@</a></li>
                            }

                        </ul>
                    </div>


                    <div class="single-blog-widget mb-50">
                        <div class="single-blog-banner">
                            <a asp-controller="blog" asp-action="detail" id="blog"><img src="~/assets/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2>
                        </div>
                    </div>



                    <div class="single-blog-widget mb-50">
                        <h3>latest post</h3>

                        @await Html.PartialAsync("_blogPartialView", Model.Blogs)

                    </div>


                    <div class="single-blog-widget">
                        <h3>tags</h3>
                        <div class="single-tag">
                            @foreach (Tag tag in Model.Tags)
                            {
                                <a asp-controller="event" asp-action="TagFindEvent" asp-route-id="@tag.Id" class="mr-10 mb-10">@tag.Name</a>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Event Details End -->
